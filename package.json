{
  "name": "transcendence",
  "private": true,
  "version": "1.0.0",
  "description": "Microservices architecture for Transcendence project",
  "type": "module",
  "workspaces": [
    "src/api-gateway",
    "src/auth",
    "src/frontend"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "test": "vitest",
    "test:run": "vitest run",
    "test:auth": "vitest run test/auth/**/*.test.ts",
    "test:user": "vitest run test/user-management/**/*.test.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint src/**/src/**/*.ts test/**/*.ts --ext .ts",
    "lint:fix": "eslint src/**/src/**/*.ts test/**/*.ts --ext .ts --fix",
    "format": "prettier --write src/**/src/**/*.ts test/**/*.ts",
    "format:check": "prettier --check src/**/src/**/*.ts test/**/*.ts"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.25",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "emmet-ls": "^0.4.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "jsdom": "^22.1.0",
    "prettier": "^3.6.2",
    "react-router-dom": "^6.30.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "vitest-webgl-canvas-mock": "^1.1.0"
  }
}
