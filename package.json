{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for microservices architecture using Fastify",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "clean": "rm -rf dist",
    "install-deps": "npm install fastify @fastify/http-proxy @fastify/cors @fastify/helmet pino pino-pretty && npm install -D typescript @types/node ts-node-dev"
  },
  "keywords": [
    "api-gateway",
    "microservices",
    "fastify",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fastify": "^3.29.4",
    "fastify-cors": "^6.1.0",
    "fastify-helmet": "^7.1.0",
    "fastify-http-proxy": "^6.3.0",
    "pino": "^7.11.0",
    "pino-pretty": "^7.6.1"
  },
  "devDependencies": {
    "@types/node": "^12.20.55",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.9.5"
  }
}
