{
  "name": "api-gateway",
  "version": "1.0.0",
  "type": "module",
  "description": "API Gateway for Transcendence microservices architecture using Fastify",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node --env-file=.env dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/src/**/*.ts test/**/*.ts --ext .ts",
    "lint:fix": "eslint src/**/src/**/*.ts test/**/*.ts --ext .ts --fix",
    "format": "prettier --write src/**/src/**/*.ts test/**/*.ts",
    "format:check": "prettier --check src/**/src/**/*.ts test/**/*.ts"
  },
  "keywords": [
    "api-gateway",
    "microservices",
    "fastify",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@elastic/ecs-pino-format": "^1.5.0",
    "@fastify/busboy": "^2.1.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/http-proxy": "^9.5.0",
    "@fastify/websocket": "^7.0.1",
    "fastify": "^4.28.1",
    "jsonwebtoken": "^9.0.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "tsx": "^4.20.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.17",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4",
    "vitest-webgl-canvas-mock": "^1.1.0",
    "ws": "^8.19.0"
  },
  "engines": {
    "node": ">=18"
  }
}
