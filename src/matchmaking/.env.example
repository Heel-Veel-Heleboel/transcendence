# Server Configuration
HOST=0.0.0.0
PORT=3005
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=file:./prisma/dev.db

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Matchmaking Configuration
# Auto-pairing interval in milliseconds (default: 5000 = 5 seconds)
AUTO_PAIR_INTERVAL_MS=5000

# Deadline check interval in milliseconds (default: 60000 = 1 minute)
DEADLINE_CHECK_INTERVAL_MS=60000

# Tournament Configuration
# Default match deadline in minutes (default: 30)
DEFAULT_MATCH_DEADLINE_MIN=30

# Default registration window in minutes (default: 15)
DEFAULT_REGISTRATION_WINDOW_MIN=15
