{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022"],
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "rootDir": ".",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "types": ["node"]
    },
    "include": ["src", "generated"],
    "exclude": ["dist", "**/*.test.ts", "test", "tests", "__tests__"]
  }