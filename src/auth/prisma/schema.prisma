generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model UserCredentials {
  userId          Int @id
  hashedPassword  String
}

model RefreshToken {
  id          String @id @default(uuid())
  userId      Int 
  hashedToken String
  createdAt   DateTime @default(now())
  expiredAt   DateTime
  revokedAt   DateTime?
  @@index([revokedAt])
}
