generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model UserCredentials {
  user_id          Int @id
  hashed_password  String
}

model RefreshToken {
  id          String @id @default(uuid())
  user_id      Int 
  hashed_token String
  created_at   DateTime @default(now())
  expired_at   DateTime
  revoked_at   DateTime?
  @@index([revoked_at])
}
