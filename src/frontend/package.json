{
  "name": "frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "frontend for Transcendance microservices architecture using Typescript",
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node ./dist/index.js",
    "webserver": "python3 -m http.server",
    "make": "npm run build && npm run webserver",
    "clean": "rm -rf ./dist/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "vitest": "^4.0.6"
  }
}
